<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ed_number"
        android:layout_width="368dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/please_enter_a_number_1_10"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_textNumber"
        android:layout_width="236dp"
        android:layout_height="61dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/ed_number"
        app:layout_constraintTop_toBottomOf="@+id/ed_number"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/ed_guess"
        android:layout_width="236dp"
        android:layout_height="77dp"
        android:layout_marginTop="60dp"
        android:background="#0A8D9E"
        android:onClick="button"
        android:text="Guess Number"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/ed_textNumber"
        app:layout_constraintTop_toBottomOf="@+id/ed_textNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>